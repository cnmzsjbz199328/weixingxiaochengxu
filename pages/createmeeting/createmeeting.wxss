.container {
  padding: 20px;
}

.input, .picker {
  width: 100%;
  height: 44px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.picker-inner {
  height: 24px;
  line-height: 24px;
}

.submit-btn {
  width: 100%;
  padding: 10px;
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}
