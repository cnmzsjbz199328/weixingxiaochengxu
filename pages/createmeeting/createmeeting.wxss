.container {
  padding: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.picker {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  line-height: 40px;
}

.input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
}

.btn-submit {
  width: 100%;
  height: 44px;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 4px;
}
