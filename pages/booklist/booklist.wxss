.container {
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.book-list {
  margin-bottom: 20px;
}

.book-item {
  background-color: #f8f8f8;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-info {
  flex: 1;
}

.book-name {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.book-author {
  font-size: 14px;
  color: #666;
}

.detail-btn {
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 8px 12px;
  font-size: 14px;
  margin-left: 10px;
}

.add-book-btn {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 12px;
  font-size: 16px;
  margin-top: 20px;
}
