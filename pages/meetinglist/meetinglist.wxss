.container {
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.search-container {
  position: relative;
  margin-top: 10px;
}

.search-input {
  height: 36px;
  padding: 0 30px 0 10px;
  border: 1px solid #ddd;
  border-radius: 18px;
  font-size: 14px;
}

.search-icon {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
}

.meeting-list {
  margin-bottom: 20px;
  background-color: #f8f8f8;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px;
  height: 420px;
  overflow-y: auto;
}

.meeting-item {
  background-color: #ffffff;
  border-radius: 8px;
  padding: 15px 1px 15px 15px;
  margin-bottom: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meeting-info {
  width: 100%;
}

.meeting-name {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.meeting-date, .meeting-time, .meeting-location {
  font-size: 14px;
  color: #666;
  display: block;
  margin-bottom: 3px;
}

.add-meeting-btn {
  width: 100%;
  background-color: green;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 10px;
  font-size: 16px;
}

.delete-btn {
  padding: 4px 8px;
  font-size: 12px;
  border-radius: 4px;
  background-color: #4dafff;
  color: white;
  border: none;
  margin-left: 8px;
  max-width: 60px;
}

.delete-btn.confirm {
  background-color: #ff7875;
}

.delete-btn:active {
  opacity: 0.8;
}

.add-meeting-btn {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 12px;
  font-size: 16px;
}
