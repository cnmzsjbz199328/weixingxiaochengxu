.container {
  padding: 20px;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.profile-form {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 24px;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 16px;
  border: 2px solid #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.change-avatar-btn {
  background-color: #f0f0f0;
  color: #333;
  font-size: 14px;
  padding: 8px 20px;
  border-radius: 20px;
  border: none;
}

.change-avatar-btn:active {
  background-color: #e0e0e0;
}

.input-group {
  margin-bottom: 16px;
  display: flex;
  align-items: center;
}

.label {
  display: block;
  font-size: 18px;
  color: #666;
  margin-right: 10px;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.input:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.error-text {
  color: #ff3b30;
  font-size: 12px;
  margin-top: 4px;
  padding-left: 4px;
}

.submit-btn {
  width: 100%;
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  margin-top: 20px;
  text-align: center;
  font-weight: 500;
}

.submit-btn:active {
  opacity: 0.9;
}

/* 输入框获得焦点时的样式 */
.input-focus {
  border-color: #007AFF;
  background-color: #fff;
  box-shadow: 0 0 0 2px rgba(0, 122, 255, 0.1);
}

/* 禁用状态的样式 */
.input:disabled {
  background-color: #f5f5f5;
  color: #999;
}

/* 错误状态的输入框样式 */
.input-error {
  border-color: #ff3b30;
}
