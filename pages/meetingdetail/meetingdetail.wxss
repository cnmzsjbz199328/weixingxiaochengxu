.container {
  padding: 20px;
}

.meeting-info {
  margin-bottom: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.info {
  display: block;
  margin-bottom: 5px;
}

.btn-participate {
  width: 100%;
  height: 44px;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 4px;
  margin-bottom: 20px;
}

.comments-section {
  margin-top: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.comment-list {
  margin-bottom: 20px;
}

.comment-item {
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}

.comment-user {
  font-weight: bold;
}

.comment-content {
  display: block;
  margin: 5px 0;
}

.comment-time {
  font-size: 12px;
  color: #999;
}

.comment-input {
  display: flex;
}

.input {
  flex: 1;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  margin-right: 10px;
}

.btn-submit {
  width: 80px;
  height: 40px;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 4px;
}
