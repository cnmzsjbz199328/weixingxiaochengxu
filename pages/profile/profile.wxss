.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.avatar-container {
  width: 120px;
  height: 120px;
  border-radius: 60px;
  overflow: hidden;
  margin-bottom: 15px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 20px;
  font-weight: bold;
}

.stats {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 30px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 14px;
  color: #666;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
}

.profile-btn {
  width: 80%;
  margin-bottom: 15px;
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 10px 0;
  font-size: 16px;
}

.logout-btn {
  background-color: #FF3B30;
}

.login-btn {
  width: 80%;
  margin: 20px auto;
  background-color: #07C160;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 10px 0;
  font-size: 16px;
}
