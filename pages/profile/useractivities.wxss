.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 20rpx;
  text-align: center;
}

.loading, .error, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  background: #fff;
  border-radius: 8rpx;
}

.error {
  color: #ff4d4f;
}

/* 评论列表样式 */
.comment-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.book-name {
  font-weight: bold;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-content {
  color: #666;
  line-height: 1.6;
}

/* 会议列表样式 */
.meeting-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.meeting-name {
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.meeting-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meeting-time {
  color: #666;
  font-size: 24rpx;
}

.meeting-status {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  min-height: 40rpx;
  min-width: 120rpx;
  line-height: normal;
  white-space: nowrap;
  box-sizing: border-box;
}